<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="using:MCFAdaptApp.Avalonia.Converters"
             xmlns:vm="using:MCFAdaptApp.Avalonia.ViewModels"
             x:Class="MCFAdaptApp.Avalonia.Views.RegisterView"
             x:DataType="vm:RegisterViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 헤더 -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Register" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding PatientId, StringFormat='Patient ID: {0}'}" FontSize="16" Margin="0,0,0,5"/>
            <Button Content="Load DICOM Files" Command="{Binding LoadDicomFilesCommand}" Padding="10,5" Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- 메인 콘텐츠 -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- CBCT 정보 -->
            <Border Grid.Column="0" BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,0,5,0" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="CBCT" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    
                    <StackPanel Grid.Row="1" IsVisible="{Binding CBCT, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Text="{Binding CBCT.Name}" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding CBCT.DicomFiles.Count, StringFormat='Number of Files: {0}'}" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding CBCT.Width, StringFormat='Width: {0} pixels'}" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding CBCT.Height, StringFormat='Height: {0} pixels'}" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding CBCT.Depth, StringFormat='Depth: {0} slices'}" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding CBCT.PixelSpacingX, StringFormat='Pixel Spacing X: {0:F2} mm'}" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding CBCT.PixelSpacingY, StringFormat='Pixel Spacing Y: {0:F2} mm'}" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding CBCT.SliceThickness, StringFormat='Slice Thickness: {0:F2} mm'}" Margin="0,0,0,5"/>
                    </StackPanel>
                    
                    <TextBlock Grid.Row="1" Text="No CBCT data available" 
                               IsVisible="{Binding CBCT, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=true}"
                               Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Border>
            
            <!-- Reference CT 정보 -->
            <Border Grid.Column="1" BorderBrush="#CCCCCC" BorderThickness="1" Margin="5,0,0,0" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Reference CT" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    
                    <StackPanel Grid.Row="1" IsVisible="{Binding ReferenceCT, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Text="{Binding ReferenceCT.Name}" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding ReferenceCT.DicomFiles.Count, StringFormat='Number of Files: {0}'}" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding ReferenceCT.Width, StringFormat='Width: {0} pixels'}" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding ReferenceCT.Height, StringFormat='Height: {0} pixels'}" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding ReferenceCT.Depth, StringFormat='Depth: {0} slices'}" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding ReferenceCT.PixelSpacingX, StringFormat='Pixel Spacing X: {0:F2} mm'}" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding ReferenceCT.PixelSpacingY, StringFormat='Pixel Spacing Y: {0:F2} mm'}" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding ReferenceCT.SliceThickness, StringFormat='Slice Thickness: {0:F2} mm'}" Margin="0,0,0,5"/>
                    </StackPanel>
                    
                    <TextBlock Grid.Row="1" Text="No Reference CT data available" 
                               IsVisible="{Binding ReferenceCT, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=true}"
                               Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
        
        <!-- 푸터 (상태 메시지 및 오류) -->
        <StackPanel Grid.Row="2" Margin="10">
            <TextBlock Text="{Binding StatusMessage}" Foreground="Blue" IsVisible="{Binding StatusMessage, Converter={StaticResource NullToVisibilityConverter}}"/>
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" IsVisible="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <ProgressBar IsIndeterminate="True" Height="5" IsVisible="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
