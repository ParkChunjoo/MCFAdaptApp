<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:MCFAdaptApp.Avalonia.Views"
        xmlns:vm="using:MCFAdaptApp.Avalonia.ViewModels"
        mc:Ignorable="d"
        x:Class="MCFAdaptApp.Avalonia.Views.SelectPatientWindow"
        x:DataType="vm:SelectPatientWindowViewModel"
        Title="MCF-Adapt"
        MinHeight="800" MinWidth="1200"
        Width="1200" Height="800"
        Background="#FF1E1E1E"
        WindowStartupLocation="CenterScreen"
        SystemDecorations="None"
        CanResize="True"
        WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Patient Info -->
            <RowDefinition Height="*"/> <!-- Content -->
        </Grid.RowDefinitions>
        
        <!-- Header with logo and user info -->
        <Grid Grid.Row="0" Background="#FF1E1E1E" Name="HeaderBar">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left area for logo (optional) -->
            <TextBlock Grid.Column="0" Text="MCF-Adapt" Foreground="White" FontSize="15" FontWeight="SemiBold" 
                       Margin="10,5" VerticalAlignment="Center" FontFamily="Segoe UI"/>
            
            <!-- Center text - this area will be draggable -->
            <TextBlock Grid.Column="1" Text="Not for clinical use - evaluation use only" 
                       Foreground="#AAAAAA" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI"/>
            
            <!-- User info and window controls -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="10,5">
                <Button Content="_" Foreground="White" Background="Transparent" BorderThickness="0" Margin="5,0"
                        Name="MinimizeButton" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="40" 
                        Height="30" FontFamily="Segoe UI" FontSize="14"/>
                <Button Content="â–¡" Foreground="White" Background="Transparent" BorderThickness="0" Margin="5,0"
                        Name="RestoreMaximizeButton" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="40" 
                        Height="30" FontFamily="Segoe UI" FontSize="14"/>
                <Button Content="X" Foreground="Red" Background="Transparent" BorderThickness="0" Margin="5,0"
                        Name="CloseButton" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="40" 
                        Height="30" FontFamily="Segoe UI" FontSize="14"/>
            </StackPanel>
        </Grid>
        
        <!-- Patient Information Panel (Visible when ShowPatientInfo is true) -->
        <Border Grid.Row="1"
                Background="#252526"
                BorderBrush="#3F3F46"
                BorderThickness="0,0,0,1"
                Height="50"
                IsVisible="{Binding ShowPatientInfo}">
            <Grid Margin="10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Patient Info Box -->
                <Border Grid.Column="0"
                        Background="#2D2D30"
                        BorderBrush="#3F3F46"
                        BorderThickness="1"
                        CornerRadius="3"
                        Margin="0,0,5,0"
                        Padding="8,8,8,8">
                    <StackPanel>
                        <TextBlock Text="Patient Name"
                                   Foreground="#B0B0B0"
                                   FontSize="10"
                                   Margin="0,0,0,2"/>
                        <TextBlock Text="{Binding PatientName}"
                                   Foreground="White"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                </Border>
                
                <!-- Right Patient Info Box -->
                <Border Grid.Column="1"
                        Background="#2D2D30"
                        BorderBrush="#3F3F46"
                        BorderThickness="1"
                        CornerRadius="3"
                        Margin="5,0,0,0"
                        Padding="8,8,8,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Patient ID -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Patient ID"
                                       Foreground="#B0B0B0"
                                       FontSize="10"
                                       Margin="0,0,0,2"/>
                            <TextBlock Text="{Binding PatientId}"
                                       Foreground="White"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                        
                        <!-- Date of Birth -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="DOB"
                                       Foreground="#B0B0B0"
                                       FontSize="10"
                                       Margin="0,0,0,2"/>
                            <TextBlock Text="{Binding PatientDateOfBirth, StringFormat=\{0:MM/dd/yyyy\}}"
                                       Foreground="White"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
        
        <!-- Content -->
        <views:SelectPatientView Grid.Row="2" x:Name="PatientView" />
    </Grid>
</Window> 