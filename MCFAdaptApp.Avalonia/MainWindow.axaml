<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:MCFAdaptApp.Avalonia.Views"
        xmlns:vm="using:MCFAdaptApp.Avalonia.ViewModels"
        mc:Ignorable="d"
        x:Class="MCFAdaptApp.Avalonia.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="MCF Adapt App" 
        MinHeight="800" MinWidth="1200"
        Width="1200" Height="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Patient Information Panel (Visible when ShowPatientInfo is true) -->
        <Border Grid.Row="0"
                Background="#252526"
                BorderBrush="#3F3F46"
                BorderThickness="0,0,0,1"
                Height="50"
                IsVisible="{Binding ShowPatientInfo}">
            <Grid Margin="10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Patient Info Box -->
                <Border Grid.Column="0"
                        Background="#2D2D30"
                        BorderBrush="#3F3F46"
                        BorderThickness="1"
                        CornerRadius="3"
                        Margin="0,0,5,0"
                        Padding="8,8,8,8">
                    <StackPanel>
                        <TextBlock Text="Patient Name"
                                   Foreground="#B0B0B0"
                                   FontSize="10"
                                   Margin="0,0,0,2"/>
                        <TextBlock Text="{Binding PatientName}"
                                   Foreground="White"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                </Border>
                
                <!-- Right Patient Info Box -->
                <Border Grid.Column="1"
                        Background="#2D2D30"
                        BorderBrush="#3F3F46"
                        BorderThickness="1"
                        CornerRadius="3"
                        Margin="5,0,0,0"
                        Padding="8,8,8,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Patient ID -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Patient ID"
                                       Foreground="#B0B0B0"
                                       FontSize="10"
                                       Margin="0,0,0,2"/>
                            <TextBlock Text="{Binding PatientId}"
                                       Foreground="White"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                        
                        <!-- Date of Birth -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="DOB"
                                       Foreground="#B0B0B0"
                                       FontSize="10"
                                       Margin="0,0,0,2"/>
                            <TextBlock Text="{Binding PatientDateOfBirth, StringFormat=\{0:MM/dd/yyyy\}}"
                                       Foreground="White"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
        
        <!-- Main TabControl -->
        <TabControl Grid.Row="1" x:Name="MainTabControl">
            <TabItem Header="Patient">
                <views:SelectPatientView />
            </TabItem>
            <TabItem Header="Register">
                <views:RegisterView />
            </TabItem>
            <TabItem Header="Contour">
                <TextBlock Text="Contour View" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </TabItem>
            <TabItem Header="Plan">
                <TextBlock Text="Plan View" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </TabItem>
            <TabItem Header="Review">
                <TextBlock Text="Review View" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
